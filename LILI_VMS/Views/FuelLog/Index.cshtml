                    Id: id
                },
                error: function (result) {
                    alert("error");
                    console.log(result.responseText);
                },
                success: function (result) {

                    $('#mymodel .modal-content').empty();
                    $('#mymodel .modal-content').html(result);
                    console.log("Modal content set successfully");



                }
            });
        $('#mymodel').modal('show');
    }
